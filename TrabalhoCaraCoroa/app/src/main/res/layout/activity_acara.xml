<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ACara" android:background="@color/CorFundo">

    <ImageView
            android:layout_width="317dp"
            android:layout_height="248dp" app:srcCompat="@drawable/moeda_cara"
            android:id="@+id/img_campo"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/Txv_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="46dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voltar"
            android:background="@drawable/botao_voltar"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/img_campo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="82dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="81dp"/>
    <TextView
            android:text="Cara !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Txv_text" android:textSize="46sp"
            android:textColor="@android:color/background_light"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="146dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="146dp"/>
</android.support.constraint.ConstraintLayout>