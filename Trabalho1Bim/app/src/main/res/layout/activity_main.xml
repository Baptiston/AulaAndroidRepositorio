<?xml version="1.0" encoding="utf-8"?>
<ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity" android:background="#040406"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="191dp" app:srcCompat="@drawable/imgchurrasco"
            android:id="@+id/imageView3"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <Button
            android:text="CALCULAR"
            android:layout_width="127dp"
            android:layout_height="68dp"
            android:id="@+id/Btn_calcular" android:background="#040406"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Small" android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/eqt_crianca"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="142dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="142dp"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/eqt_homem"
            android:background="@android:color/background_light"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="71dp"/>
    <TextView
            android:text="Quantidade Homens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="123dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="123dp"/>
    <TextView
            android:text="Churrascometro"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@android:color/background_light" android:textStyle="normal|bold|italic"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="117dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="117dp"/>
    <TextView
            android:text="Quantidade Mulheres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/eqt_homem" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="118dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="119dp"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/eqt_mulher"
            android:background="@android:color/background_light"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp"/>
    <TextView
            android:text="Quantidade Criancas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@android:color/background_light" android:textSize="18sp" android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/eqt_mulher" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="121dp"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/eqt_crianca"
            android:background="@android:color/background_light"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="71dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>