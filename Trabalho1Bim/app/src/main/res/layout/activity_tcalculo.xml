<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tcalculo" android:background="@android:color/background_dark">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Churrascometro"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="@android:color/background_light" android:textStyle="normal|bold|italic"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="117dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="117dp"/>
    <Button
            android:text="VOLTAR"
            android:layout_width="127dp"
            android:layout_height="68dp"
            android:id="@+id/btn_voltar" android:background="#040406"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Small" android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/TEpaes" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="142dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="142dp"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEpicanha"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/TEmaminha"
            android:layout_marginEnd="51dp"/>
    <ImageView
            android:layout_width="331dp"
            android:layout_height="191dp" app:srcCompat="@drawable/imgchurrasco"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintHorizontal_bias="0.714" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="Picanha :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="Maminha :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="98dp"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEmaminha"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
    />
    <TextView
            android:text="Linguiça :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/TEpicanha"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TElinguica"
            android:background="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintEnd_toStartOf="@+id/TEfrango"
            android:layout_marginEnd="51dp"/>
    <TextView
            android:text="Frango :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/TEmaminha"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="116dp"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEfrango"
            android:background="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text=" Arroz :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/TElinguica"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEarroz"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/TEbatata"
            android:layout_marginEnd="51dp"/>
    <TextView
            android:text="Batata :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/TEfrango" android:textSize="18sp"
            android:textColor="@android:color/background_light" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="119dp"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEbatata"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>
    <TextView
            android:text="Farofa :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/TEarroz" android:textColor="@android:color/background_light"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEfarofa"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:background="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/TEpaes" android:layout_marginEnd="51dp"/>
    <TextView
            android:text="Pães :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@android:color/background_light" android:textSize="18sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/TEbatata" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/TEpaes"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:background="@android:color/background_light"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>